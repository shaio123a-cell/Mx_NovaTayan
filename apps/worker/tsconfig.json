{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "../..",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "@restmon/*": ["../../packages/*/src"],
            "shared-xform": ["../../packages/shared-xform"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "../../packages/shared-xform/old",
        "../../packages/shared-xform/**/*.test.ts",
        "../../packages/shared-xform/xform_examples.ts",
        "../../packages/shared-xform/xform_preview.react.tsx"
    ]
}