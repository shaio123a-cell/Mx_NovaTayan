{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "shared-xform/*": ["../../packages/shared-xform/*.d.ts"],
            "@restmon/shared-types": ["../../packages/shared-types/src"]
        },
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting */
        "strict": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "../../packages/shared-xform/old",
        "src/shared-xform/old"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}